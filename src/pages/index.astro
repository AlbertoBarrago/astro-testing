---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main transition:animate="slide">
		<img transition:name="imageEffect" src="https://picsum.photos/500/300"> <br>
		<a class="customLink" href="/about" transition:name="textEffect">Prodotto XYS - 10x</a>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.customLink {
		color: white;
		text-decoration: none;
	}
</style>
